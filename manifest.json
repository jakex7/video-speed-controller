{
    "manifest_version": 3,
    "name": "Video Speed Controller",
    "version": "1.0.2",
    "action": {
        "default_title": "Video Speed Controller",
        "default_popup": "index.html"
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/index.ts"],
            "type": "module"
        }
    ],
    "permissions": ["storage"],
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    }
}